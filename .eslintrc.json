{
  "extends": ["next/core-web-vitals", "@rocketseat/eslint-config/next"],
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "singleQuote": true,
      "trailingComma": "all",
      "arrowParens": "always",
      "semi": false,
      "endOfLine": "auto",
      "singleAttributePerLine": true
    }],
    "simple-import-sort/imports": "error"
  },
  "plugins": ["simple-import-sort"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
